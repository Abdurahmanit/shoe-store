            <input type="email" id="email" name="email" required>

            <button type="submit">Save Changes</button>
        </form>

        <h1>Your Orders</h1>
        <div id="orders">
            <!-- Заказы будут динамически добавлены сюда -->
        </div>
    </div>

    <script src="/js/profile.js"></script>
