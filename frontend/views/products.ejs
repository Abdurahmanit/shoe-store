                <li>
                    <label><input type="checkbox" name="category" value="men"> Men</label>
                </li>
                <li>
                    <label><input type="checkbox" name="category" value="women"> Women</label>
                </li>
                <li>
                    <label><input type="checkbox" name="category" value="running"> Running</label>
                </li>
                <li>
                    <label><input type="checkbox" name="category" value="basketball"> Basketball</label>
                </li>
                <li>
                    <label><input type="checkbox" name="category" value="casual"> Casual</label>
                </li>
                <li>
                    <label><input type="checkbox" name="category" value="skate"> Skate</label>
                </li>
            </ul>
        </aside>

        <div id="products" class="product-grid">
            <!-- Products will be displayed here -->
